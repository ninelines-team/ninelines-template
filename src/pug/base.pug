		var body = {
			attrs: {},
			classList: []
		}
	-
		var meta = {
			appleMobileWebAppCapable: '',
			appleMobileWebAppStatusBarStyle: '',
			appleMobileWebAppTitle: '',
			appleTouchFullscreen: '',
			applicationName: '',
			charset: 'utf-8',
			description: description,
			formatDetection: '',
			keywords: [],
